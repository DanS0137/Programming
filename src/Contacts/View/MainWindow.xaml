<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:viewmodel="clr-namespace:View.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
    x:Class="View.MainWindow"
        mc:Ignorable="d"
        Title="Contacts" MinHeight="400" MinWidth="600" Icon="/contacts_96x96.ico" Height="400" Width="600">
    <Window.Resources>
        <viewmodel:BoolToVisibilityConverter x:Key="VisConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3" MinWidth="3"/>
            <ColumnDefinition Width="2.25*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter
            Grid.Column="1"
            ShowsPreview="False"
            Width="2"
            Background="White"
            HorizontalAlignment="Center" Grid.RowSpan="2" />
        <Grid
            Background="#f8f8f8"
            Grid.ColumnSpan="2"
            Margin="0,0,2,0"
            Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="29"/>
                <RowDefinition/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>
            <Label
                Content="Find:"
                Margin="8,4,0,0"
                Height="26"
                HorizontalAlignment="Left"
                Width="34"
                VerticalAlignment="Top"/>
            <TextBox
                Margin="42,8,8,0"
                TextWrapping="Wrap"
                Height="18"
                VerticalAlignment="Top"/>
            <ListBox
                Margin="8,0"
                Grid.Row="1"
                ItemsSource="{Binding Contacts}"
                SelectedIndex="{Binding Path=SelectedIndex}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="8"/>
                </Grid.ColumnDefinitions>
                <Button
                    Command="{Binding AddCommand}" 
                    IsEnabled="{Binding IsEnabled}"
                    Grid.Column="1"
                    Height="25"
                    Content="Add"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
                <Button
                    Command="{Binding EditCommand}"
                    IsEnabled="{Binding IsEnabled}"
                    Height="25"
                    Grid.Column="3"
                    Content="Edit"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
                <Button
                    Command="{Binding RemoveCommand}"
                    IsEnabled="{Binding IsEnabled}"
                    Grid.Column="5"
                    Height="25"
                    Content="Remove"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Image
            Grid.Column="2"
            HorizontalAlignment="Left"
            Margin="8,26,0,0"
            Width="100"
            Height="100"
            Source="/photo_placeholder_100x100.png"
            VerticalAlignment="Top"/>
        <StackPanel 
            Grid.Column="2"
            Margin="108,0,0,0">
            <Label Content=" Name:"/>
            <TextBox
                Text="{Binding Path=Name}"
                IsReadOnly="{Binding IsReadOnly}"
                Margin="8,0,8,0"/>
            <Label Content=" PhoneNumber:"/>
            <TextBox
                Text="{Binding Path=PhoneNumber}"   
                IsReadOnly="{Binding IsReadOnly}"
                Margin="8,0,8,0"/>
            <Label Content=" Email:"/>
            <TextBox
                Text="{Binding Path=Email}"
                IsReadOnly="{Binding IsReadOnly}"
                Margin="8,0,8,0"/>
            <Button
                Command="{Binding ApplyCommand}"
                Visibility="{Binding Visibility, Converter={StaticResource VisConverter}}"
                Content="Apply"
                HorizontalAlignment="Left"
                Width="75"
                Height="25"
                Margin="8,50,0,0"/>
        </StackPanel>
    </Grid>
</Window>
