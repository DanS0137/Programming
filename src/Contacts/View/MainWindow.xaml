<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:viewmodel="clr-namespace:View.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
    x:Class="View.MainWindow"
        mc:Ignorable="d"
        Title="Contacts" Height="400" Width="550" Icon="/contacts_96x96.ico" SizeToContent="WidthAndHeight" MinWidth="550" MinHeight="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275*"/>
            <ColumnDefinition Width="275*"/>
        </Grid.ColumnDefinitions>
        <GroupBox
            Header="Edit Contact"
            Margin="15,15,2,45">
            <StackPanel>
                <Label Content="Имя:"/>
                <TextBox
                    Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Height="25.96"
                    VerticalContentAlignment="Center"/>
                <Label Content="Телефонный номер:"/>
                <TextBox 
                    Text="{Binding Path=PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Height="25.96"
                    VerticalContentAlignment="Center"/>
                <Label Content="Email:"/>
                <TextBox 
                    Text="{Binding Path=Email, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Height="25.96"
                    VerticalContentAlignment="Center"/>
            </StackPanel>
        </GroupBox>
        <GroupBox 
            Header="Read Contact"
            Margin="2,15,15,45"
            Grid.Column="1">
            <StackPanel>
                <Label Content="Имя:"/>
                <Label Content="{Binding Path=Name}" FontWeight="Bold"/>
                <Label Content="Телефонный номер:"/>
                <Label Content="{Binding Path=PhoneNumber}" FontWeight="Bold"/>
                <Label Content="Email:"/>
                <Label Content="{Binding Path=Email}" FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>
        <Button
            Content="Save"
            Command="{Binding SaveCommand}"
            Width="75"
            HorizontalAlignment="Right"
            Margin="0,0,94,15"
            Grid.Column="1"
            Height="25"
            VerticalAlignment="Bottom"/>
        <Button
            Content="Load"
            Command="{Binding LoadCommand}"
            Margin="0,0,15,15"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Width="75"
            Height="25"
            VerticalAlignment="Bottom"/>
    </Grid>
</Window>
