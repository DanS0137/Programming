<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:View"
        xmlns:viewmodel="clr-namespace:View.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
    x:Class="View.MainWindow"
        mc:Ignorable="d"
        Title="Contacts" MinHeight="400" MinWidth="600" Icon="/contacts_96x96.ico" Height="400" Width="600">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction
                            Command="{Binding ClosedCommand}"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                            Command="{Binding LoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <viewmodel:BoolToVisibilityConverter x:Key="VisConverter"/>
        <viewmodel:InverseBoolValueConverter x:Key="InvBoolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3" MinWidth="3"/>
            <ColumnDefinition Width="2.2*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter
            Grid.Column="1"
            ShowsPreview="False"
            Width="2"
            Background="White"
            HorizontalAlignment="Center" />
        <Grid
            Background="#f8f8f8"
            Grid.ColumnSpan="2"
            Margin="0,0,2,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="29"/>
                <RowDefinition/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>
            <Label
                Content="Find:"
                Margin="8,4,0,0"
                Height="26"
                HorizontalAlignment="Left"
                Width="34"
                VerticalAlignment="Top"/>
            <TextBox
                Margin="42,8,8,0"
                TextWrapping="Wrap"
                Height="18"
                VerticalAlignment="Top"/>
            <ListBox
                Margin="8,0,8,0"
                Grid.Row="1"
                ItemsSource="{Binding Contacts}"
                SelectedIndex="{Binding SelectedIndex}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="8"/>
                </Grid.ColumnDefinitions>
                <Button
                    Command="{Binding AddCommand}" 
                    IsEnabled="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Grid.Column="1"
                    Height="25"
                    Content="Add"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
                <Button
                    Command="{Binding EditCommand}"
                    IsEnabled="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Height="25"
                    Grid.Column="3"
                    Content="Edit"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
                <Button
                    Command="{Binding RemoveCommand}"
                    IsEnabled="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Grid.Column="5"
                    Height="25"
                    Content="Remove"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="105"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel 
                Grid.Column="1"
                Margin="0,0,8,0">
                <Label Content=" Name:" Margin="-5,0,0,0"/>
                <TextBox
                    Text="{Binding Name}"
                    IsReadOnly="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Margin="3,0,0,0"/>
                <Label Content=" PhoneNumber:" Margin="-5,0,0,0"/>
                <TextBox
                    Text="{Binding PhoneNumber}"   
                    IsReadOnly="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Margin="3,0,0,0"/>
                <Label Content=" Email:" Margin="-5,0,0,0"/>
                <TextBox
                    Text="{Binding Email}"
                    IsReadOnly="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Margin="3,0,0,0"/>
                <Button
                    Command="{Binding ApplyCommand}"
                    Visibility="{Binding IsEditting, Converter={StaticResource VisConverter}}"
                    Content="Apply"
                    HorizontalAlignment="Left"
                    Width="75"
                    Height="25"
                    Margin="8,50,0,0"/>
            </StackPanel>
            <Image
                Height="100"
                Margin="5,26,0,0"
                VerticalAlignment="Top"
                Source="/photo_placeholder_100x100.png"/>
        </Grid>
    </Grid>
</Window>
