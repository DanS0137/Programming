<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:controls="clr-namespace:View.Controls"
        xmlns:local="clr-namespace:View"
        xmlns:viewmodel="clr-namespace:View.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
    x:Class="View.MainWindow"
        mc:Ignorable="d"
        Title="Contacts" MinHeight="400" MinWidth="600" Icon="/contacts_96x96.ico" Height="400" Width="600">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction
                            Command="{Binding SaveContactsCommand}"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                            Command="{Binding LoadContactsCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <viewmodel:BoolToVisibilityConverter x:Key="VisConverter"/>
        <viewmodel:InverseBoolValueConverter x:Key="InvBoolConverter"/>
        <DataTemplate x:Key="contactTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Image
                    Height="30"
                    Grid.Column="0"
                    Source="/photo_placeholder_100x100.png"/>
                <StackPanel Grid.Column="1" Margin="3">
                    <TextBlock Text="{Binding Name}"/>
                    <TextBlock Text="{Binding PhoneNumber}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3" MinWidth="3"/>
            <ColumnDefinition Width="2.2*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter
            Grid.Column="1"
            ShowsPreview="False"
            Width="2"
            Background="White"
            HorizontalAlignment="Center" />
        <Grid
            Background="#f8f8f8"
            Grid.ColumnSpan="2"
            Margin="0,0,2,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="29"/>
                <RowDefinition/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>
            <Label
                Content="Find:"
                Margin="8,4,0,0"
                Height="26"
                HorizontalAlignment="Left"
                Width="34"
                VerticalAlignment="Top"/>
            <TextBox
                Margin="42,8,8,0"
                TextWrapping="Wrap"
                Height="18"
                VerticalAlignment="Top"/>
            <ListBox
                Margin="8,0,8,0"
                Grid.Row="1"
                ItemsSource="{Binding Contacts}"
                SelectedItem="{Binding SelectedContact}"
                ItemTemplate="{StaticResource contactTemplate}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="8"/>
                </Grid.ColumnDefinitions>
                <Button
                    Command="{Binding AddContactCommand}" 
                    IsEnabled="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Grid.Column="1"
                    Height="25"
                    Content="Add"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
                <Button
                    Command="{Binding EditContactCommand}"
                    IsEnabled="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Height="25"
                    Grid.Column="3"
                    Content="Edit"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
                <Button
                    Command="{Binding RemoveContactCommand}"
                    IsEnabled="{Binding IsEditting, Converter={StaticResource InvBoolConverter}}"
                    Grid.Column="5"
                    Height="25"
                    Content="Remove"
                    Margin="0,3,0,0"
                    VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="105"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel 
                Grid.Column="1"
                Margin="0,0,8,0">
                <controls:ContactControl
                    DataContext="{Binding CurrentContact}">
                </controls:ContactControl>
                <Button
                    Command="{Binding ApplyContactCommand}"
                    Visibility="{Binding IsEditting, Converter={StaticResource VisConverter}}"
                    Content="Apply"
                    HorizontalAlignment="Left"
                    Width="75"
                    Height="25"
                    Margin="8,50,0,0"/>
            </StackPanel>
            <Image
                Height="100"
                Margin="5,26,0,0"
                VerticalAlignment="Top"
                Source="/photo_placeholder_100x100.png"/>
        </Grid>
    </Grid>
</Window>
